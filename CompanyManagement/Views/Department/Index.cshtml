@model List<CompanyManagement.Models.Department>

@{
    ViewData["Title"] = "Department";
}

<a class="btn btn-primary mt-3 ms-2" href="/Department/Create">Add New Department</a>
<div class="table-responsive">
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Department ID</th>
                <th>Department Code</th>
                <th>Department Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DepartmentID</td>
                    <td>@item.DepartmentCode</td>
                    <td>@item.DepartmentName</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm" href="/Department/Create/@item.DepartmentID">Edit</a>
                        <a class="btn btn-danger btn-sm" href="/Department/Delete/@item.DepartmentID" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>



