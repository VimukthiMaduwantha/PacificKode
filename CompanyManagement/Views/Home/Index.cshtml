@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container my-5">
        <h1 class="display-4">Welcome</h1>
        <h2 class="text-center mb-4">Department Management and the Employee Management</h2>
        <div class="row">
            <div class="col-md-6 mb-6">
                <div class="card shadow h-100 hover-shadow">
                    <img src="/images/department.png" class="card-img-top" alt="Department" style="height: 200px; object-fit: contain">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Manage Departments</h5>
                        <p class="card-text">Managing departments and ensuring department records are accurate and securely stored</p>
                        <a href="/Department/Create" class="btn btn-primary mt-auto">Add Department</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-6">
                <div class="card shadow h-100 hover-shadow">
                    <img src="/images/staff.png" class="card-img-top" alt="Employee" style="height: 200px; object-fit: contain">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Manage Employees</h5>
                        <p class="card-text">Managing employees and ensuring employees records are accurate and securely stored</p>
                        <a href="/Employees/Create" class="btn btn-primary mt-auto">Add Employee</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</div>
